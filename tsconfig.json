{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["dom", "es6", "es2015", "es2016", "es2017"],
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"pretty": true,
		"rootDir": "./src",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "src/**/*.spec.ts"]
}
